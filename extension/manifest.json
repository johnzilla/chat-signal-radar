{
  "manifest_version": 3,
  "name": "Chat Signal Radar",
  "version": "0.1.0",
  "description": "Clusters YouTube/Twitch live chat messages into top questions, issues, and requests",
  "permissions": [
    "sidePanel",
    "storage"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://www.twitch.tv/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://www.twitch.tv/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "side_panel": {
    "default_path": "sidebar/sidebar.html"
  },
  "action": {
    "default_title": "Open Chat Signal Radar"
  },
  "web_accessible_resources": [
    {
      "resources": ["libs/web-llm/*", "models/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; connect-src https://huggingface.co https://*.huggingface.co https://raw.githubusercontent.com;"
  }
}
