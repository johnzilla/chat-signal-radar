{
  "manifest_version": 3,
  "name": "Chat Signal Radar",
  "version": "0.1.0",
  "description": "Clusters YouTube/Twitch live chat messages into top questions, issues, and requests",
  "permissions": [
    "sidePanel",
    "storage"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://www.twitch.tv/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/live_chat*",
        "https://www.youtube.com/watch*",
        "https://www.twitch.tv/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "sidebar/sidebar.html"
  },
  "action": {
    "default_title": "Open Chat Signal Radar"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
